<%= form_for([:admin, @group], :html => {:class => "form-horizontal"}) do |f| %>

	<%= render "shared/errors_messages", :object => @group %>

	<div class="control-group">
		<%= f.label :name, "Nome do grupo", :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :name, :class => "input-xlarge" %>
		</div>
	</div>
	
	<div class="control-group">
		<%= hidden_field_tag "group[student_ids][]", nil %>
		<label class="control-label">Alunos</label>
		<div class="controls">
			<% @students.each do |student| %>
				<label class="checkbox">
					<%= check_box_tag "group[student_ids][]", student.id, @group.student_ids.include?(student.id) %>
					<%= student.name %>
				</label>
			<% end %>
		</div>
	</div>
	
  <div class="form-actions">
    <%= f.submit "Salvar", :class => "btn btn-primary" %>
  </div>
<% end %>




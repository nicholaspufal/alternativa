<button class="btn">
	<i class="icon-arrow-left"></i> Ver outro grupo
</button>

<div class="page-header">
  <h2>Relatórios para o grupo <%= @group.name %></h2>
</div>

<form class="well form-inline">
	<span>Filtrar alunos por média:</span>
	<select class="input-small">
		<option>1</option>
		<option>2</option>
		<option>3</option>
		<option>4</option>
		<option>5</option>
		<option>6</option>
		<option>7</option>
		<option>8</option>
		<option>9</option>
		<option>10</option>
	</select>

	<button type="submit" class="btn btn-info">Filtrar</button>
</form>


<table class="table table-striped table-bordered table-condensed reports_table">
	<thead>
		<tr>
			<th></th>
			<% @exams.each do |exam| %>
				<th><%= exam.title %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<tr>
			<% @group.students.each do |student| %>
				<td><%= student.name %></td>
				<% @exams.each do |exam| %>
					<td><%= Assessment.find_result(student, exam) ? Assessment.find_result(student, exam).grade : "0.0" %></td>
				<% end %>	
			<% end %>
		</tr>
	</tbody>		
</table>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Nome do aluno</th>
			<th>E-mail</th>
			<th>Opções</th>
		</tr>
	</thead>
	<tbody>
	<% students.each do |student| %>
		<% presenter student do |student_presenter| %>
		<tr>
			<td width="30%"><%= student_presenter.name %></td>
			<td width="30%"><%= student_presenter.email %></td>
			<td>
				<div class="btn-group">
					<%= student_presenter.toggle_access %>
			  	<button class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
			    <ul class="dropdown-menu">
	          <li><%= link_to "Editar", edit_admin_student_path(student) %></li>
	          <li><%= link_to "Remover", admin_student_path(student), :method => :delete, :confirm => "Tem certeza que deseja remover?" %></li>
			    </ul>
				</div>
			</td>
		</tr>
		<% end %>
	<% end %>
	</tbody>		
</table>
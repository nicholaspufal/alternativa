<div class="page-header">
  <h1>Listagem de avaliações</h1>
</div>

<% if @exams.present? %>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Título</th>
			<th>Data da criação</th>
			<th>Opções</th>
		</tr>
	</thead>

	<tbody>
		<% @exams.each do |exam| %>
			<% presenter exam do |exam_presenter| %>
			<tr>
				<td><%= exam_presenter.title %></td>
				<td><%= exam_presenter.created_at %></td>
				<td><%= link_to "Editar", edit_admin_exam_path(exam) %> / <%= link_to "Remover", admin_exam_path(exam), :method => :delete, :confirm => "Tem certeza que deseja remover?" %></td>
			</tr>
			<% end %>
		<% end %>
	</tbody>		
</table>
<% else %>
<div class="alert alert-block">
	<a class="close" data-dismiss="alert">×</a>
	<p>Não existem provas cadastradas.</p>
</div>

<% end %>

<%= link_to "Criar nova avaliação", new_admin_exam_path, :class => "btn btn-primary" %>



<div class="page-header">
  <h1>Listagem de grupos</h1>
</div>

<div class="row">
  <div class="span16">
	
<% if @groups.present? %>
		<table class="zebra-striped">
			<thead>
				<tr>
					<th>Nome do grupo</th>
					<th>Data da criação</th>
					<th>Opções</th>
				</tr>
			</thead>
	
			<tbody>
				<% @groups.each do |group| %>
				<tr>
					<td><%= link_to group.name, group_path(group)  %></td>
					<td><%= time_ago_in_words group.created_at %> atrás</td>
					<td><%= link_to "Editar", edit_group_path(group) %> / <%= link_to "Remover", group_path(group), :method => :delete, :confirm => "Tem certeza que deseja remover?" %></td>
				</tr>
				<% end %>
			</tbody>		
		</table>
<% else %>
	<div class="alert-message block-message warning">
		<p>Não existem grupos cadastrados.</p>
	</div>
	
<% end %>

		<%= link_to "Criar novo grupo", new_group_path, :class => "btn primary" %>
	</div>
</div>


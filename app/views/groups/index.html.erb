<div class="page-header">
  <h1>Listagem de grupos</h1>
</div>

<% if @groups.present? %>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Nome do grupo</th>
					<th>Data da criação</th>
					<th>Opções</th>
				</tr>
			</thead>
	
			<tbody>
				<% @groups.each do |group| %>
				<tr>
					<td><%= link_to group.name, group_path(group)  %></td>
					<td><%= time_ago_in_words group.created_at %> atrás</td>
					<td><%= link_to "Editar", edit_group_path(group) %> / <%= link_to "Remover", group_path(group), :method => :delete, :confirm => "Tem certeza que deseja remover?" %></td>
				</tr>
				<% end %>
			</tbody>		
		</table>
<% else %>
<div class="alert alert-block">
	<a class="close" data-dismiss="alert">×</a>
	<p>Não existem grupos cadastrados.</p>
</div>
	
<% end %>

		<%= link_to "Criar novo grupo", new_group_path, :class => "btn btn-primary" %>


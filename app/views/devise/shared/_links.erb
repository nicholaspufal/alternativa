<%- if controller_name != 'sessions' %>
  <%= link_to "<i class='icon-user icon-white'></i> Efetuar login".html_safe, new_session_path(resource_name), :class => "btn btn-primary" %><br />
<% end -%>

<%#- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%#= link_to "Efetuar cadastro", new_registration_path(resource_name) %><br />
<%# end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "<i class=\"icon-white icon-exclamation-sign\"></i> Esqueci minha senha".html_safe, new_password_path(resource_name), :class => "btn btn-info" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Não recebi confirmação por e-mail", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Não recebi instruções sobre como habilitar minha conta", new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
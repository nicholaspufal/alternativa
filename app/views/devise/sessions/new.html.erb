<div class="page-header">
	<h2>Bem-vindo ao Alternativa.</h2>
	<h3>Para ter acesso às avaliações, faça login abaixo ou <%= link_to "cadastre-se", new_registration_path(:student) %>.</h3>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>

<div class="control-group">
	<%= f.label :email, "E-mail", :class => "control-label" %>
	<div class="controls">
		<%= f.email_field :email, :class => "input-xlarge" %>
	</div>
</div>

<div class="control-group">
	<%= f.label :password, "Senha", :class => "control-label" %>
	<div class="controls">
		<%= f.password_field :password, :class => "input-xlarge" %>
	</div>
</div>

<% if devise_mapping.rememberable? %>
<div class="control-group">
	<%= f.label :remember_me, "Lembrar senha", :class => "control-label" %>
	<div class="controls">
		<%= f.check_box :remember_me %> 
	</div>
</div>
<% end %>

<div class="control-group">
	<div class="controls">
  	<%= f.submit "Efetuar login", :class => "btn" %>
	</div>
</div>

<% end %>

<hr/>

<%= render :partial => "devise/shared/links" %>
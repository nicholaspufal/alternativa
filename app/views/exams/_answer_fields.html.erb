<div class="control-group">
	<div class="controls">
		<%= builder.hidden_field :_destroy %> 
		<%= link_to "<i class='icon-ok icon-white'></i>".html_safe, "#", :class => "btn btn-success" %>
		<%= builder.hidden_field :correct %>
		<%= builder.text_field :title, :class => "span6" %> 
		<%= link_to_function "Remover", "remove_field(this)", :class => "btn btn-danger" %> 
	</div>
</div> 
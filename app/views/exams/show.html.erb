<div class="page-header">
  <h1>[Prova] <%= @exam.title %></h1>
</div>
<div class="row">
  <div class="span16">
			Questões: 
		<% @exam.questions.each_with_index do |question, index| %>
		<br/><br/>
			<%= "Questão ##{index+1}"%> <%= question.title %><br/><br/>
			<% question.answers.each_with_index do |answer, index| %>
				<%= "Alternativa ##{index+1}"%> <% if answer.correct? %>(Correta)<% end %><%= answer.title %><br/>
			<% end %>
			
		<% end %>
  </div>
</div>
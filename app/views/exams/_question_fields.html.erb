<fieldset class="question">
	<legend>Questão (<%= link_to_function "remover questão", "remove_question(this)" %>)</legend>

<div class="clearfix">
	<%= builder.label :title, "Pergunta" %>
	<div class="input">
		<%= builder.hidden_field :_destroy %> 
		<%= builder.text_area :title, :class => "xlarge span9", :rows => 6 %>
	</div>
</div> 

	<%= builder.fields_for :answers do |answer| %>
		<%= render "answer_fields", :builder => answer %>
	<% end %>
	
	<div class="clearfix">
		<div class="input">
			<%= link_to_add_fields "Adicionar alternativa", builder, :answers, :class => "btn success" %>	
		</div>
	</div>
	
</fieldset>